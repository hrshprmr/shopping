<%= flash_messages %>
<h2>Product</h2>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  	$<%= @product.price %>
</p>
<% @product.images.each do |image| %>
  <%= image_tag image ,size: "300x250"%>
<% end %>

<% if has_role?(:admin)%>
<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-warning" %>
<% end %>
<%= link_to "Back", products_path, class: "btn btn-default" %>
