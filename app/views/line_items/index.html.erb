<p id="notice"><%= notice %></p>

<h1>Line Items</h1>

<table  class = "table">
  <thead>
    <tr>
      <th>id</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
      <td><%= line_item.product_id %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.price %></td>
        <td><%= link_to 'Show', [line_item.product,line_item], class: "btn  btn-success" %></td>

        <td><%= link_to 'Destroy', [line_item.product,line_item],class: "btn  btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
